{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    // "declarationDir": "./type",
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["./type", "@types"],
    "paths": {
      "@/*": ["./src/*"],
      "@m/*": ["./src/module/*"],
      "@a/": ["./src/*"],
      "@lib/": ["./lib/*"],
      "type/": ["./type/*"],
    },    
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/shims-vue.d.ts",
    //  "src/types"
    ]
}
